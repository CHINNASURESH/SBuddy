<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Match Setup"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <!-- Game Type (Left) and Points (Right) -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <!-- Game Type Dropdown (Left Corner) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Game Type"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>
                        <Spinner
                            android:id="@+id/spinner_game_type"
                            android:layout_width="140dp"
                            android:layout_height="48dp"
                            android:background="#E0E0E0"/>
                    </LinearLayout>

                    <!-- Points Dropdown (Right Top Corner) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Points to Win"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>
                        <Spinner
                            android:id="@+id/spinner_points"
                            android:layout_width="140dp"
                            android:layout_height="48dp"
                            android:background="#E0E0E0"/>
                    </LinearLayout>
                </RelativeLayout>

                <!-- Custom Points Input (Hidden by default) -->
                <EditText
                    android:id="@+id/input_custom_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Custom Points"
                    android:inputType="number"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"
                    android:background="#E0E0E0"
                    android:padding="12dp"/>

                <!-- Team 1 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team 1"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/input_player1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Player 1"
                    android:padding="12dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/input_player2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Player 2"
                    android:padding="12dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp"/>

                <!-- Team 2 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team 2"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/input_player3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Player 3"
                    android:padding="12dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/input_player4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Player 4"
                    android:padding="12dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/btn_start_match"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Start Match"
                    android:backgroundTint="#9C27B0"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

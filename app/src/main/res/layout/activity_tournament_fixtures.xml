<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Participants &amp; Fixtures"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Participants Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add Player"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <ImageButton
                        android:id="@+id/btn_import_excel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_upload"
                        android:tooltipText="Import from CSV"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp"/>
                    <ImageButton
                        android:id="@+id/btn_download_excel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_save"
                        android:tooltipText="Download List"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/input_player_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Player Name"
                    android:background="#E0E0E0"
                    android:padding="10dp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/input_player_name_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Player 2 Name"
                    android:background="#E0E0E0"
                    android:padding="10dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/check_top_seed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Seed"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btn_add_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Player"
                    android:backgroundTint="#9C27B0"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/txt_participants_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Participants: 0"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/btn_generate_fixtures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate Fixtures"
                    android:layout_marginTop="16dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fixtures Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="300dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fixtures"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <ImageButton
                        android:id="@+id/btn_toggle_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp"
                        android:tooltipText="Toggle List/Text View"/>

                    <ImageButton
                        android:id="@+id/btn_edit_fixtures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_edit"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp"
                        android:tooltipText="Edit Fixtures"/>

                    <ImageButton
                        android:id="@+id/btn_share_fixtures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_share"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full tournament bracket."
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="16dp"/>

                <ScrollView
                    android:id="@+id/scroll_bracket_text"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="visible">
                    <EditText
                        android:id="@+id/txt_bracket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add players and generate fixture to see the bracket."
                        android:gravity="start"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:fontFamily="monospace"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:minLines="10"/>
                </ScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_fixtures"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:visibility="gone"
                    android:padding="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:elevation="10dp"/>

        <Button
            android:id="@+id/btn_finish_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish &amp; Save"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</ScrollView>
